import java.util.Scanner;

public class ArquivosJavas {

	public static void main(String[] args) {
        Scanner sc = new Scanner (System.in);
		
		
		int x , resultado1 , valor, valores;
		
		System.out.println("Digite um valor para saber se você é isento ou tem a pagar:");
		 x = sc.nextInt();  // valor
		 
		 
		 
		
		 
		 
		 resultado1 = x-2000;
				 
				 
				 
		valores = ( resultado1*8)/100;
		//+ ((1000*8)/100));
				
		 
		
		 
				 
		
		
		

				
		if (x <= 2000) {
			System.out.println("ISENTO" );
		}else if ( x > 2000 ) {    
			
			System.out.println("SEU VALOR A PAGAR:" + valores);
		} 
		
		
		

	}

}
