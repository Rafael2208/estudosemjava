import java.util.Scanner;

public class ArquivosJavas {

	public static void main(String[] args) {
        Scanner sc = new Scanner (System.in);
		
		
		double x , resultado , resultado1, resultado2, resultado3 ,valoracrecimo1 ,valoracrecimo2 , valoracrecimo3, resfinal1,resfinal2 ,resfinal3 , valor1, valor2, valor3;
		
		System.out.println("Digite um valor para saber se você é isento ou tem a pagar:");
		 x = sc.nextDouble();  // valor
		 
		 valor1 = (x-2000.00);
		 valor2 = (x-3000.00);
		 valor3 = (x-4500.00);
		 
		 resultado = 0.00;
		 resultado1 = (1000*8)/100; //80
		 resultado2 = (1500*18)/100;
		 
		
		 valoracrecimo1 = (valor1 *8)/100; 
		 valoracrecimo2 = (valor2 *18)/100;
		 valoracrecimo3 = (valor3 *28)/100;
		 
				 
		resfinal1 =	resultado + valoracrecimo1;
		resfinal2 =	resultado + valoracrecimo2;
		resfinal3 =	resultado + valoracrecimo3;

				
		if (x <= 2000.00) {
			System.out.println("ISENTO" );
		}else if (x == 2000.00 && x > 2000.00 ) {     //2010.00-2000.00
			System.out.println("SEU VALOR A PAGAR:" + resfinal1);
		} 
		
		
		

	}

}
