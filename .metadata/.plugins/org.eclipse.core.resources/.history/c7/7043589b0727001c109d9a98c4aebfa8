import java.util.Locale;
import java.util.Scanner;

public class EstudoJava {

	public static void main(String[] args) {
        Locale.setDefault(Locale.US);
        
		Scanner sc = new Scanner (System.in);
		
		int a, b ,d, f;
		double  c, e , resultado;
		
		a = sc.nextInt();
		
		b = sc.nextInt();
		c = sc.nextDouble();
		
		f = sc.nextInt();
		
		d = sc.nextInt();
		e = sc.nextDouble();
		
		resultado = (b*c)+(d*e);
		
		System.out.println(" Código da peça 1: " + a );
		System.out.println(" Número de peças:" + b);
		System.out.println(" Preço ou Valor unitario de cada peça:" + c);
		System.out.println("                     " );
		System.out.println(" Código da peça 2: " + f );
		System.out.println(" Número de peças:" + d);
		System.out.println(" Preço ou Valor unitario de cada peça:" + e);
		System.out.println("                     " );
		
		
		System.out.printf(" Valor a pagar: % .2f\n ", resultado);
		
		
		
		sc.close();

	}

}
